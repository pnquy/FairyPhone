                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div style="height: 60px;" class="col-lg-4 col-6 text-end text-lg-end">
                @{
                    string userId = Context.Session.GetString("UserId");
                    string fullName = Context.Session.GetString("FullName");
                }

                @if (!string.IsNullOrEmpty(userId))
                {
                    <div class="h-100 logout_dropdown">
                        <button class="h-100 btn btn-dark btn-lg me-lg-n1 btn-disable-hover" type="button">
                            Hi, @fullName
                        </button>
                        <button type="button" class="h-100 btn btn-lg btn-dark dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu p-0">
                            <li style="height: 50px;"> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Log out<i class="fa-solid fa-right-from-bracket fa-lg"></i></a></li>
                        </ul>
                    </div>
                } else
                {
                    <div class="h-100">
                        <a asp-controller="Home" asp-action="SignIn" class="btn btn-dark btn-lg me-lg-1">Login</a>
                        <a asp-controller="Home" asp-action="SignUp" class="btn btn-dark btn-lg">SignUp</a>
                    </div>
                }
            </div>
