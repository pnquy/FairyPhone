<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FairyPhone</title>
    <link rel="stylesheet" href="~/css/Admin/sidebar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Links", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block" style="background-color: black;">
                <div id="sidebar-header">
                    <div class="" style="display: flex; ">
                        <a href="" class="text-decoration-none">
                            <img src="~/img/logo.png" alt="Mô tả ảnh" class="img-fluid" />
                        </a>
                    </div>
                </div>
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            @* <a class="nav-link" data-bs-toggle="collapse" href="#productCollapse" role="button" aria-expanded="false" aria-controls="productCollapse">
                                Product
                            </a> *@
                           @*  <div class="collapse" id="productCollapse"> *@
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color: white;" asp-controller="Admin" asp-action="ProductCRUD">Product</a>
                                    </li>
                                </ul>
                            @* </div> *@
                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link" data-bs-toggle="collapse" href="#productCollapse" role="button" aria-expanded="false" aria-controls="productCollapse">
                                Product
                            </a> *@
                            @*  <div class="collapse" id="productCollapse"> *@
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" style="color: white;" asp-controller="Admin"
                                        asp-action="ContactMessages">Contact</a>
                                </li>
                            </ul>
                            @* </div> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" data-bs-toggle="collapse" href="#userCollapse"
                                role="button" aria-expanded="false" aria-controls="userCollapse">
                                User
                            </a>
                            <div class="collapse" id="userCollapse">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a style="color: white;" class="nav-link" asp-controller="Admin"
                                            asp-action="Info">Info</a>
                                    </li>
                                    <li class="nav-item">
                                        <a style="color: white;" class="nav-link" asp-controller="Admin"
                                            asp-action="Invoices">Invoices</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#revenueCollapse" role="button" aria-expanded="false" aria-controls="revenueCollapse">
                                Revenue
                            </a>
                            <div class="collapse" id="revenueCollapse">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Simple Chart</a>
                                    </li>
                                </ul>
                            </div>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="" asp-controller="Access"
                                asp-action="Logout">LogOut</a>
                        </li>
                        
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
