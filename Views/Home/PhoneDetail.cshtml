<script>
    function addToCart() {
        console.log("Hi");
        var quantity = 1;

        var data = {
            phoneId: @Model.Id,
            quantity: quantity
        };

        $.ajax({
            url: "/Cart/AddToCart",
            type: 'POST',
            data: data,
            success: function (result) {
                if (result.success) {
                    alert("Add to cart successfully!");
                } else {
                    alert(result.message);
                }
            },
            error: function (error) {
                alert(error);
            }
        });
    }
</script>

@section Scripts {
    <script defer src="~/js/Home/detail.js"></script>
}
