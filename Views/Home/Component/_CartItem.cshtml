@model Cart

<tr>
    <td class="align-middle"><img src="~/img/phones/@(Model.Smartphone.Picture).jpg" alt="" style="width: 100px;">@Model.Smartphone?.Name</td>
    <td class="price align-middle">$@(Math.Round(   Model.Smartphone.Price * (1 - Model.Smartphone.Discount / 100), 3   ))</td>
    <td class="align-middle">
        <div class="input-group quantity mx-auto" style="width: 100px;">
            <div class="input-group-btn">
                @* <button class="btn btn-sm btn-primary btn-minus">
                    <i class="fa fa-minus"></i>
                </button> *@
            </div>
            <input type="text" class="quantity-input form-control form-control-sm bg-secondary border-0 text-center" value="@Model.Quantity">
            <div class="input-group-btn">
               @*  <button class="btn btn-sm btn-primary btn-plus">
                    <i class="fa fa-plus"></i>
                </button> *@
            </div>
        </div>
    </td>
    <td class="total align-middle">$@(Model.Smartphone?.Price * Model.Quantity)</td>
    <td class="align-middle">
        <a href="@Url.Action("RemoveFromCart", "Home", new { cartId = Model.Id })" class="btn btn-sm btn-danger">
            <i class="fa fa-times"></i>
        </a>
    </td>
</tr>
